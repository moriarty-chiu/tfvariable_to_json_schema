{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "ecs": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                    "hostname": {
                        "type": "string"
                    },
                    "ecs_size": {
                        "type": "string",
                        "enum": [
                            "ecs_small",
                            "ecs_medium",
                            "ecs_large"
                        ]
                    },
                    "az": {
                        "type": "string"
                    },
                    "subnet": {
                        "type": "string",
                        "enum": [
                            "app",
                            "db",
                            "dmz"
                        ]
                    },
                    "default_disk": {
                        "type": "number",
                        "default": 150
                    },
                    "additional_disk": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                                "size": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "size"
                            ]
                        },
                        "default": {}
                    },
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "default": "",
                        "options": {
                            "hidden": true
                        }
                    }
                },
                "required": [
                    "hostname",
                    "ecs_size",
                    "az",
                    "subnet",
                    "default_disk",
                    "additional_disk"
                ]
            },
            "description": "Specify the ECS instances to be created",
            "default": []
        }
    },
    "required": []
}